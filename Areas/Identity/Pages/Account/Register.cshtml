@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<main style="background-color: lightblue; height: 100vh;">
    <div class="container" id="phonefix" style="padding-top: 120px;">
        <div class="row">
            <div class="col-12">
                <div class="card" style="border-color: black; box-shadow: 0px 0px 7px 0px rgba(0, 0, 0, 0.8); transition: 0.3s;">
                    <h3 class="card-title pl-3" style="padding-top:30px">Register New Account</h3>
                    <hr />
                    <div class="row">
                        <div class="col-12">
                            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="card-body">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group col-xl-5 col-lg-5 col-md-7 col-sm-7">
                                    <label asp-for="Input.FirstName" class="control-label"></label>
                                    <input asp-for="Input.FirstName" class="form-control" />
                                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                </div>
                                <div class="form-group col-xl-5 col-lg-5 col-md-7 col-sm-7">
                                    <label asp-for="Input.LastName" class="control-label"></label>
                                    <input asp-for="Input.LastName" class="form-control" />
                                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                </div>
                                <div class="form-group col-xl-5 col-lg-5 col-md-7 col-sm-7">
                                    <label asp-for="Input.DisplayName" class="control-label"></label>
                                    <input asp-for="Input.DisplayName" class="form-control" />
                                    <span asp-validation-for="Input.DisplayName" class="text-danger"></span>
                                </div>
                                <div class="form-group col-xl-5 col-lg-5 col-md-7 col-sm-7">
                                    <label asp-for="Input.Email" class="control-label"></label>
                                    <input asp-for="Input.Email" class="form-control" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="form-group col-xl-5 col-lg-5 col-md-7 col-sm-7">
                                    <label asp-for="Input.Password" class="control-label"></label>
                                    <input asp-for="Input.Password" class="form-control" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="form-group col-xl-5 col-lg-5 col-md-7 col-sm-7">
                                    <label asp-for="Input.ConfirmPassword" class="control-label"></label>
                                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="row col-md-12">
                                    <div class="form-group col-xl-1 col-lg-1 col-md-2 col-sm-2">
                                        <input type="submit" value="Register" class="btn btn-primary" />
                                    </div>
                                    <p class="col-xl-1 col-lg-4 col-md-4 col-sm-4 pt-3">
                                        <a asp-controller="Home" asp-action="Index">Back</a>
                                    </p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
